<%= form_with(model: @post, local: true, url: new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg|%>
        <li><%= msg =%></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p><%= form.label :Image %></p>
  <p id = "image_column" ><%= form.file_field :image %></p>
  <p><%= image_tag (@post.image.url) if @post.image && @post.image.url %></p>
  <p><%= form.hidden_field :image_cache %></p>
  <p><%= form.label :content %></p>
  <p><%= form.text_field :content %></p>
  <p><%= form.submit class: "btn btn-warning" %></p>
  <p><%= link_to "Back to Home", posts_path, class: "btn btn-info" %></p>
<% end %>
